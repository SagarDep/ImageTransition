<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vasya.phototransition">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE">
    </uses-permission>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE">
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/photo_transiton_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.vasya.phototransition.utils.GlideModuleQ"
            android:value="GlideModule" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".prelollipop.PreLollipopActivity"
            android:theme="@style/DetailsTheme">
        </activity>

        <activity android:name=".prelollipop.PreLollipopListActivity"
            android:theme="@style/DetailsTheme">
        </activity>

        <activity android:name=".lollipop.LollipopActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".lollipop.ListLollipopActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>